<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown50"
    tools:context=".EliteDivision.FreelanceActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brown50"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/applogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_logo"
                android:textSize="45sp"
                android:textStyle="bold"
                android:layout_margin="25dp"
                android:layout_marginTop="8dp"
                />

            <Button
                android:id="@+id/socialbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:textSize="40sp"
                android:text="@string/socialbtn"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/addf_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Want something to be done?"
        android:layout_below="@id/toolbarid"
        android:layout_margin="25dp"
        android:textStyle="bold"
        android:textSize="35sp"
        android:visibility="visible"
        />
    <TextView
        android:id="@+id/addf_postbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/addf_post"
        android:textColor="@color/purple_200"
        android:layout_below="@+id/toolbarid"
        android:layout_margin="25dp"
        android:textSize="35sp"
        android:text="Hire"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/freelancerecview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addf_postbtn"
        android:layout_marginTop="35dp" />



</RelativeLayout>