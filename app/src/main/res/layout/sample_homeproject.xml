<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="7dp"
    android:id="@+id/cardhp"
    app:cardCornerRadius="7dp"
    android:layout_margin="3dp"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/protopicstvhp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/projecttopics"
            android:layout_margin="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/needforprotvhp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Skills: "
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="15sp"
            android:layout_below="@+id/protopicstvhp"
            />

        <TextView
            android:id="@+id/briefideaprotvhp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/Briefideaofp"
            android:layout_below="@id/needforprotvhp"
            />

        <TextView
            android:id="@+id/briefrequirementhp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="More: "
            android:layout_below="@+id/briefideaprotvhp"
            />



    </RelativeLayout>

</androidx.cardview.widget.CardView>